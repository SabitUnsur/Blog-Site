@using DailyBlogUI.Areas.Admin.Models;
@model RoleUpdateViewModel
@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit Role Page</h1>

<form method="post">
    <div class="form-group">
        <label>Role ID</label>
        <input type="text" name="roleId" value="@Model.roleId" class="form-control" />
    </div>

    <div class="form-group">
        <label>Role Title</label>
        <input type="text" name="roleName" value="@Model.roleName" class="form-control" />
    </div>


    <button class="btn btn-success">Save</button>

</form>
