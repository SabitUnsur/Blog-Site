@using DailyBlogUI.Models;
@model UserUpdateViewModel
@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Writer Edit Profile</h1>


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Edit Profile</h4>
            <br />
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Writer Name</label>
                    <input type="text" asp-for="@Model.NamesurName" class="form-control" />
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail3">Username</label>
                    <input type="text" asp-for="@Model.Username" class="form-control" />
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail3">Email</label>
                    <input type="text" asp-for="@Model.emailAdress" class="form-control" />
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail3">New Password</label>
                    <input type="text" asp-for="@Model.userPassword" class="form-control" />
                </div>

                <div class="form-check">
                    <input type="checkbox" id="flexCheckChecked" asp-for="@Model.ChangePassword">
                    <label for="flexCheckChecked">
                        Şifremi Değiştirmek istemiyorum
                    </label>
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail3">Image URL</label>
                    <input type="text" asp-for="@Model.imageURL" class="form-control" />
                </div>

                <button type="submit" class="btn btn-gradient-primary mr-2">Submit</button>
                <button asp-action="Index" asp-controller="Dashboard" class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>



